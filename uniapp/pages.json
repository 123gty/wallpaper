{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				// "navigationStyle": "custom",// 隐藏系统导航栏
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "首页",
				// 开启下拉刷新
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 50
			}
		},
		{
			"path": "pages/classify/classify",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "壁纸分类"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "pages/detail/detail",
			"style": {
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "壁纸详情"
			}

		}, {
			"path": "pages/more/more",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"onReachBottomDistance": 30
				// "navigationBarTitleText": "更多"
			}
		}, {
			"path": "pages/demotantan/demotantan",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white"
			}

		}, {
			"path": "pages/demozhihu/demozhihu",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white"
			}

		}, {
			"path": "pages/uploadImg/uploadImg",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "上传壁纸"
			}
		}, {
			"path": "pages/turnImg/turnImg",
			"style": {
				"navigationBarBackgroundColor": "#A0B8EA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "翻一翻"
			}

		}, {
			"path": "uview-ui/components/u-avatar-cropper/u-avatar-cropper",
			"style": {
				"navigationBarTitleText": "头像裁剪",
				"navigationBarBackgroundColor": "#A0B8EA"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "壁纸APP",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#000",
		"selectedColor": "#C7ACEF",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/home.png",
			"selectedIconPath": "static/home2.png",
			"text": "首页"
		}, {
			"pagePath": "pages/classify/classify",
			"iconPath": "static/classify.png",
			"selectedIconPath": "static/classify2.png",
			"text": "分类"
		}, {
			"pagePath": "pages/my/my",
			"iconPath": "static/my.png",
			"selectedIconPath": "static/my2.png",
			"text": "我的"
		}]
	}
}
